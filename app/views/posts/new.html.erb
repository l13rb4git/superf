<div id="page-wrapper">
  <h1>Create New Post</h1>
  
  <%= form_with model: @post, url: posts_path do |f| %>
    <%= @post.errors.any? %>
    <% if @post.errors.any? %>
      <div id="errors">
        <p><%= pluralize(@post.errors.count, "error") %> stopped this post from saving</p>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <p>
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :body %>
      <br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit %>
      <br>
    </p>
  <% end %>
</div>
